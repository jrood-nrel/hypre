include ../config/Makefile.config

FEIHYPREFILES = ${NALU_HYPRE_FEI_NALU_HYPRE_FILES}
FEMLIFILES = ${NALU_HYPRE_FEI_FEMLI_FILES}
IJMVFILES = ${NALU_HYPRE_SRC_TOP_DIR}/IJ_mv/*.o
EUCLIDFILES = ${NALU_HYPRE_EUCLID_FILES}
PARASAILSFILES = ${NALU_HYPRE_PARASAILS_FILES}
PILUTFILES = ${NALU_HYPRE_PILUT_FILES}
DISTMATRIXFILES = ${NALU_HYPRE_SRC_TOP_DIR}/distributed_matrix/*.o
KRYLOVFILES = ${NALU_HYPRE_SRC_TOP_DIR}/krylov/*.o
MATMATFILES = ${NALU_HYPRE_SRC_TOP_DIR}/matrix_matrix/*.o
MULTIVECFILES = ${NALU_HYPRE_SRC_TOP_DIR}/multivector/*.o
PARCSRLSFILES = ${NALU_HYPRE_SRC_TOP_DIR}/parcsr_ls/*.o
PARCSRMVFILES = ${NALU_HYPRE_SRC_TOP_DIR}/parcsr_mv/*.o
PARCSRBLOCKMVFILES = ${NALU_HYPRE_SRC_TOP_DIR}/parcsr_block_mv/*.o
SEQMVFILES = ${NALU_HYPRE_SRC_TOP_DIR}/seq_mv/*.o
SSTRUCTLSFILES = ${NALU_HYPRE_SRC_TOP_DIR}/sstruct_ls/*.o
SSTRUCTMVFILES = ${NALU_HYPRE_SRC_TOP_DIR}/sstruct_mv/*.o
STRUCTLSFILES = ${NALU_HYPRE_SRC_TOP_DIR}/struct_ls/*.o
STRUCTMVFILES = ${NALU_HYPRE_SRC_TOP_DIR}/struct_mv/*.o
UTILITIESFILES = ${NALU_HYPRE_SRC_TOP_DIR}/utilities/*.o
BLASFILES = ${NALU_HYPRE_SRC_TOP_DIR}/blas/*.o
LAPACKFILES = ${NALU_HYPRE_SRC_TOP_DIR}/lapack/*.o

IJMVOBJFILES = ${NALU_HYPRE_SRC_TOP_DIR}/IJ_mv/*.obj
PARCSRLSOBJFILES = ${NALU_HYPRE_SRC_TOP_DIR}/parcsr_ls/*.obj
PARCSRMVOBJFILES = ${NALU_HYPRE_SRC_TOP_DIR}/parcsr_mv/*.obj
SEQMVOBJFILES = ${NALU_HYPRE_SRC_TOP_DIR}/seq_mv/*.obj
SSTRUCTLSOBJFILES = ${NALU_HYPRE_SRC_TOP_DIR}/sstruct_ls/*.obj
SSTRUCTMVOBJFILES = ${NALU_HYPRE_SRC_TOP_DIR}/sstruct_mv/*.obj
STRUCTLSOBJFILES = ${NALU_HYPRE_SRC_TOP_DIR}/struct_ls/*.obj
STRUCTMVOBJFILES = ${NALU_HYPRE_SRC_TOP_DIR}/struct_mv/*.obj
UTILITIESOBJFILES = ${NALU_HYPRE_SRC_TOP_DIR}/utilities/*.obj

FILES_HYPRE = \
$(FEIHYPREFILES)\
$(FEMLIFILES)\
$(IJMVFILES)\
$(EUCLIDFILES)\
$(PARASAILSFILES)\
$(PILUTFILES)\
$(DISTMATRIXFILES)\
$(KRYLOVFILES)\
$(MATMATFILES)\
$(MULTIVECFILES)\
$(PARCSRLSFILES)\
$(PARCSRMVFILES)\
$(PARCSRBLOCKMVFILES)\
$(SEQMVFILES)\
$(SSTRUCTLSFILES)\
$(SSTRUCTMVFILES)\
$(STRUCTLSFILES)\
$(STRUCTMVFILES)\
$(UTILITIESFILES)\
$(BLASFILES)\
$(LAPACKFILES)\
$(IJMVOBJFILES)\
$(PARCSRLSOBJFILES)\
$(PARCSRMVOBJFILES)\
$(SEQMVOBJFILES)\
$(SSTRUCTLSOBJFILES)\
$(SSTRUCTMVOBJFILES)\
$(STRUCTLSOBJFILES)\
$(STRUCTMVOBJFILES)\
$(UTILITIESOBJFILES)

SONAME = libHYPRE-${NALU_HYPRE_RELEASE_VERSION}${NALU_HYPRE_LIB_SUFFIX}
SOLIBS = ${DSUPERLU_LIBS} ${MAGMA_LIBS} ${MPILIBDIRS} ${MPILIBS} ${LAPACKLIBDIRS} ${LAPACKLIBS}\
 ${BLASLIBDIRS} ${BLASLIBS} ${LIBS} ${FLIBS}


##################################################################
# Targets
##################################################################

all: libHYPRE${NALU_HYPRE_LIB_SUFFIX}
	cp -fR libHYPRE* ${NALU_HYPRE_BUILD_DIR}/lib

install: all
	cp -fR libHYPRE* ${NALU_HYPRE_LIB_INSTALL}

clean:
	rm -f *.o libHYPRE*
	rm -rf pchdir tca.map *inslog*

distclean: clean

##################################################################
# Rules
##################################################################

# NOTE: Some of the FILES symbols below can be empty, so they are listed on an
# AR line with at least one nonempty symbol
libHYPRE.a: ${FILES_HYPRE}
	@echo  "Building libHYPRE ... "
	rm -f $@
	${AR} $@ $(FEIHYPREFILES) $(FEMLIFILES) $(IJMVFILES)
	${AR} $@ $(EUCLIDFILES) $(PARASAILSFILES) $(PILUTFILES) $(DISTMATRIXFILES)
	${AR} $@ $(KRYLOVFILES)
	${AR} $@ $(MATMATFILES)
	${AR} $@ $(MULTIVECFILES)
	${AR} $@ $(PARCSRLSFILES)
	${AR} $@ $(PARCSRMVFILES)
	${AR} $@ $(PARCSRBLOCKMVFILES)
	${AR} $@ $(SEQMVFILES)
	${AR} $@ $(SSTRUCTLSFILES)
	${AR} $@ $(SSTRUCTMVFILES)
	${AR} $@ $(STRUCTLSFILES)
	${AR} $@ $(STRUCTMVFILES)
	${AR} $@ $(UTILITIESFILES) $(BLASFILES) $(LAPACKFILES)
	${AR} $@ $(IJMVOBJFILES)
	${AR} $@ $(PARCSRLSOBJFILES)
	${AR} $@ $(PARCSRMVOBJFILES)
	${AR} $@ $(SEQMVOBJFILES)
	${AR} $@ $(SSTRUCTLSOBJFILES)
	${AR} $@ $(SSTRUCTMVOBJFILES)
	${AR} $@ $(STRUCTLSOBJFILES)
	${AR} $@ $(STRUCTMVOBJFILES)
	${AR} $@ $(UTILITIESOBJFILES)
	${RANLIB} $@

libHYPRE.so libHYPRE.dylib: ${FILES_HYPRE}
	@echo  "Building $@ ... "
	${BUILD_CC_SHARED} -o ${SONAME} ${FILES_HYPRE} ${SOLIBS} ${SHARED_SET_SONAME}${SONAME} ${SHARED_OPTIONS} ${LDFLAGS}
	ln -s -f ${SONAME} $@
